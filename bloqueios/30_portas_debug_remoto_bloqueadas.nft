add set ip filter portas_liberadas {
   type inet_service
}

add set ip filter portas_bloqueadas {
   type inet_service
   elements = { 80, 81 } 
}

add chain ip filter debug_remoto { type filter hook input priority filter; policy accept; }
add rule filter debug_remoto tcp dport @portas_liberadas counter accept
add rule filter debug_remoto tcp dport @portas_bloqueadas counter drop
